{
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Database=paymentapi;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "docker-jwt-secret-key-for-development-purposes-only-32-chars",
    "Issuer": "PaymentAPI",
    "Audience": "PaymentAPI",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RedisSettings": {
    "ConnectionString": "redis:6379",
    "DefaultDatabase": 0
  },
  "RateLimitSettings": {
    "PaymentCreationPerMinute": 10,
    "PaymentConfirmationPerMinute": 5,
    "LoginAttemptsPerMinute": 5
  },
  "ThroughputLimitSettings": {
    "EnableThroughputLimiting": true,
    "MaxConcurrentRequests": 500,
    "MaxRequestsPerSecond": 1000,
    "RequestTimeoutSeconds": 30,
    "MaxRequestBodySizeMB": 30,
    "MaxConnectionsPerIP": 50
  },
  "KestrelLimitSettings": {
    "MaxConcurrentConnections": 1000,
    "MaxConcurrentUpgradedConnections": 100,
    "MaxRequestBodySize": 31457280,
    "MaxRequestBufferSize": 1048576,
    "MaxRequestHeaderCount": 100,
    "MaxRequestHeadersTotalSize": 32768,
    "KeepAliveTimeoutMinutes": 2,
    "RequestHeadersTimeoutSeconds": 30
  },
  "PaymentSettings": {
    "BaseUrl": "http://localhost:8080",
    "DefaultExpirationMinutes": 1440,
    "MaxExpirationMinutes": 10080,
    "MinAmount": 0.01,
    "MaxAmount": 10000.00,
    "SupportedCurrencies": ["USD", "EUR", "GBP"]
  },
  "RabbitMQSettings": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "UseSSL": false,
    "PaymentWebhookExchange": "payment.webhooks",
    "PaymentWebhookQueue": "payment.webhook.queue",
    "PaymentWebhookRoutingKey": "payment.webhook"
  },
  "WebhookSettings": {
    "MaxRetryAttempts": 3,
    "InitialRetryDelaySeconds": 5,
    "MaxRetryDelaySeconds": 300,
    "TimeoutSeconds": 30,
    "EnableWebhooks": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/payment-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
