{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=test_payment_app.db",
    "RedisConnection": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationThatShouldBeAtLeast256BitsLong",
    "Issuer": "PaymentAPI",
    "Audience": "PaymentAPIUsers",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "Database": 1
  },
  "RateLimitSettings": {
    "PaymentCreation": {
      "RequestsPerMinute": 100,
      "WindowSizeMinutes": 1
    },
    "PaymentConfirmation": {
      "RequestsPerMinute": 50,
      "WindowSizeMinutes": 1
    },
    "Login": {
      "RequestsPerMinute": 50,
      "WindowSizeMinutes": 1
    }
  },
  "PaymentSettings": {
    "DefaultExpirationMinutes": 1440,
    "MaxExpirationMinutes": 10080,
    "SupportedCurrencies": ["USD", "EUR", "GBP"]
  },
  "RabbitMQSettings": {
    "ConnectionString": "amqp://guest:guest@localhost:5672/",
    "WebhookQueueName": "webhook_queue",
    "PaymentNotificationExchange": "payment_notifications"
  }
}
