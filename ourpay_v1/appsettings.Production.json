{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-service;Port=5432;Database=paymentapi;Username=postgres;Password=postgres123;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=50;Command Timeout=30;"
  },
  "JwtSettings": {
    "SecretKey": "production-super-secret-jwt-key-32-characters-minimum-for-k8s-environment",
    "Issuer": "PaymentAPI-K8s",
    "Audience": "PaymentAPI-K8s",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "RedisSettings": {
    "ConnectionString": "redis-service:6379",
    "DefaultDatabase": 0
  },
  "RateLimitSettings": {
    "PaymentCreationPerMinute": 50,
    "PaymentConfirmationPerMinute": 25,
    "LoginAttemptsPerMinute": 20
  },
  "ThroughputLimitSettings": {
    "EnableThroughputLimiting": true,
    "MaxConcurrentRequests": 1000,
    "MaxRequestsPerSecond": 2000,
    "RequestTimeoutSeconds": 30,
    "MaxRequestBodySizeMB": 10,
    "MaxConnectionsPerIP": 100
  },
  "KestrelLimitSettings": {
    "MaxConcurrentConnections": 2000,
    "MaxConcurrentUpgradedConnections": 200,
    "MaxRequestBodySize": 10485760,
    "MaxRequestBufferSize": 1048576,
    "MaxRequestHeaderCount": 50,
    "MaxRequestHeadersTotalSize": 16384,
    "KeepAliveTimeoutMinutes": 2,
    "RequestHeadersTimeoutSeconds": 30
  },
  "PaymentSettings": {
    "BaseUrl": "http://payment-api-service",
    "DefaultExpirationMinutes": 1440,
    "MaxExpirationMinutes": 10080,
    "MinAmount": 0.01,
    "MaxAmount": 10000.00,
    "SupportedCurrencies": ["USD", "EUR", "GBP"]
  },
  "RabbitMQSettings": {
    "HostName": "rabbitmq-service",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "QueueName": "webhook_queue",
    "ExchangeName": "webhook_exchange",
    "RoutingKey": "webhook.delivery"
  },
  "WebhookSettings": {
    "MaxRetryAttempts": 5,
    "RetryDelaySeconds": 30,
    "TimeoutSeconds": 30,
    "EnableBackgroundProcessing": true,
    "BatchSize": 100,
    "ProcessingIntervalSeconds": 10
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/payment-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ASPNETCORE_ENVIRONMENT": "Production"
}
